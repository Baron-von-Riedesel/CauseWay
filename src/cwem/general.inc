Pushm	MACRO	R1,R2,R3,R4,R5,R6,R7,R8,R9,R10
	IRP	X,<R1,R2,R3,R4,R5,R6,R7,R8,R9,R10>
	IFNB	<X>			;IF THIS PARM NOT BLANK
	PUSH	X			;SAVE THE REGISTER
	ENDIF				;END IFNB
	ENDM				;END IRP
ENDM

Popm	macro	R1,R2,R3,R4,R5,R6,R7,R8,R9,R10
